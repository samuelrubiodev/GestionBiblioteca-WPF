<Window x:Class="Biblioteca.View.GestionBiblioteca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteca.View"
        mc:Ignorable="d"
        Title="Gestión Biblioteca" Height="600" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="GESTIÓN BIBLIOTECA" 
                       FontSize="48" 
                       FontWeight="Bold"
                       Margin="0,0,0,50"
                       TextAlignment="Center"/>

            <Border Background="#F0F0F0" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20">
                <StackPanel>
                    <Border Background="White" 
                            CornerRadius="5" 
                            Padding="20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="LIBROS" 
                                     FontSize="24" 
                                     VerticalAlignment="Center"
                                     Width="200"/>
                            <Button Content="Ver Libros" 
                                    Height="40" 
                                    Width="150"
                                    Click="Button_Click"
                                    Background="#007ACC"
                                    Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" 
                            CornerRadius="5" 
                            Padding="20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="USUARIOS" 
                                     FontSize="24" 
                                     VerticalAlignment="Center"
                                     Width="200"/>
                            <Button Content="Ver Usuarios" 
                                    Height="40" 
                                    Width="150"
                                    Click="Button_Click_2"
                                    Background="#007ACC"
                                    Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" 
                            CornerRadius="5" 
                            Padding="20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="PRÉSTAMOS" 
                                     FontSize="24" 
                                     VerticalAlignment="Center"
                                     Width="200"/>
                            <Button Content="Ver Préstamos" 
                                    Height="40" 
                                    Width="150"
                                    Click="Button_Click_1"
                                    Background="#007ACC"
                                    Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>