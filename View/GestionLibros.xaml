<Window x:Class="Biblioteca.View.GestionLibros"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteca.View"
        mc:Ignorable="d"
        Title="GestionLibros" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button Name="btnCrearLibro" Content="Crear Libro" Width="200" Height="30" Margin="10,10,10,10"></Button>
            <Button Name="btnEliminarLibro" Content="Eliminar Libro" Width="200" Height="30" Margin="10,10,10,10"></Button>
        </StackPanel>
        <DataGrid x:Name="dataGridLibros" AutoGenerateColumns="False" Margin="0,42,0,0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="120" />
                <DataGridTextColumn Header="Título" Binding="{Binding Titulo}" Width="120"/>
                <DataGridTextColumn Header="Autor" Binding="{Binding Autor}" Width="120" />
                <DataGridTemplateColumn Header="Año de publicación" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding FechaPublicacion}" BorderThickness="0" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Género" Binding="{Binding Genero} " Width="120" />
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
